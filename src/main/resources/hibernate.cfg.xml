<hibernate-configuration >
    <session-factory>
        <property name="connection.driver_class"> com.mysql.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/taxi</property>
        <property name="connection.username">root</property>
        <property name="connection.password"></property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name="show_sql">true</property>
        <mapping class="ir.maktab.model.User"/>
        <mapping class="ir.maktab.model.Driver"/>
        <mapping class="ir.maktab.model.Passenger"/>
        <mapping class="ir.maktab.model.Travel"/>
    </session-factory>
</hibernate-configuration>